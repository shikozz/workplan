<Page x:Class="WorkPlan.Pages.Applications"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkPlan.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Goods">

    <Grid KeyDown="OnKeyDownHandler">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
        <ComboBox Width="350" x:Name="comboFilter" DisplayMemberPath="Название" SelectionChanged="comboFilter_SelectionChanged"/>
        <Button Width="200" x:Name="resetfilter" Click="resetfilter_Click" Content="Сбросить фильтр"/>
        </StackPanel>
        <DataGrid IsReadOnly="True" Grid.Row="1" AutoGenerateColumns="False" x:Name="AppGrid">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" >
                    <Setter Property="Background" Value="AliceBlue"/>
                    <Setter Property="BorderBrush" Value="Blue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="FontFamily" Value="Inder"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="LightBlue"/>
                            <Setter Property="Background" Value="DarkBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" Binding="{Binding Path=Goods.Название}" Width="*"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Path=Количество}" Width="50"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Path=Status.Статус}" Width="150"/>
                <DataGridTextColumn Header="Отдел" Binding="{Binding Path=Departments.Название}" MinWidth="200" MaxWidth="200"/>
                <DataGridTextColumn Header="Создано" Binding="{Binding Path=created_at}" Width="170"/>
                <DataGridTemplateColumn CellStyle="{x:Null}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button FontSize="15" Width="120" Height="30" Click="GoToApplications">Редактировать</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="GOGOPOWERRANGERS" Click="Button_Click"/>
    </Grid>
</Page>
